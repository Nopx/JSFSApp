<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView android:id="@+id/header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Main Menu"
		android:layout_centerHorizontal="true"
		android:textSize="40sp"
    />
    <Button android:id="@+id/japGerBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/japGerBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/header"
		android:onClick="open_japGer"
    />
      <Button android:id="@+id/gerJapBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/gerJapBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/japGerBtn"
		android:onClick="open_gerJap"
    />
    <Button android:id="@+id/hirGerBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/hirGerBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/gerJapBtn"
		android:onClick="open_hirGer"
    />
      <Button android:id="@+id/gerHirBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/gerHirBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/hirGerBtn"
		android:onClick="open_gerHir"
    />
      <Button android:id="@+id/kanjiGerBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/kanjiGerBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/gerHirBtn"
		android:onClick="open_kanjiGer"
    />
      <Button android:id="@+id/gerKanjiBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/gerKanjiBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/kanjiGerBtn"
		android:onClick="open_gerKanji"
    />
      <Button android:id="@+id/kanjiKUNBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/kanjiKUNBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/gerKanjiBtn"
		android:onClick="open_kanjiKUN"
    />
      <Button android:id="@+id/kunKanjiBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/kunKanjiBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/kanjiKUNBtn"
		android:onClick="open_kunKanji"
    />
      <Button android:id="@+id/kanjiONBtn"
		android:layout_width="fill_parent"
		android:layout_height="45sp"
		android:text="@string/kanjiONBtn_string"
		android:textSize="20sp"
		android:layout_below="@+id/kunKanjiBtn"
		android:onClick="open_kanjiON"
    />
</RelativeLayout>

